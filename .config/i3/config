#  _   __         _      __   __      
# | | / /__ _____(_)__ _/ /  / /__ ___
# | |/ / _ `/ __/ / _ `/ _ \/ / -_|_-<
# |___/\_,_/_/ /_/\_,_/_.__/_/\__/___/

# modifier
set $mod Mod4

# restart the i3status bar
set $refresh_i3status killall -SIGUSR1 i3status

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

#    ____        _      __    
#   / __/_______(_)__  / /____
#  _\ \/ __/ __/ / _ \/ __(_-<
# /___/\__/_/ /_/ .__/\__/___/
#              /_/            

# auto screen lock
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# compositor
exec_always --no-startup-id picom --experimental-backends

# autotiling
exec_always --no-startup-id autotiling

# polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# login script
exec --no-startup-id ~/.config/i3/on-login.sh

#  _      ___         __             
# | | /| / (_)__  ___/ /__ _    _____
# | |/ |/ / / _ \/ _  / _ \ |/|/ (_-<
# |__/|__/_/_//_/\_,_/\___/__,__/___/

# borders
for_window [class=".*"] border pixel 2

# gaps
gaps inner 16
gaps outer 0

# font
font pango:Hurmit Nerd Font 8

# theme
include ~/.config/i3/theme

#    __ __         __   _         __  
#   / //_/__ __ __/ /  (_)__  ___/ /__
#  / ,< / -_) // / _ \/ / _ \/ _  (_-<
# /_/|_|\__/\_, /_.__/_/_//_/\_,_/___/
#          /___/                      

# screen lock
bindsym $mod+l exec --no-startup-id i3lock

# multimedia controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86AudioPause exec --no-startup-id playerctl play-pause && $refresh_i3status
bindsym XF86AudioNext exec --no-startup-id playerctl next && $refresh_i3status
bindsym XF86AudioPrev exec --no-startup-id playerctl previous && $refresh_i3status

# open terminal
bindsym $mod+Return exec kitty
bindsym $mod+Shift+Return exec kitty su -

# open file browser
bindsym $mod+space exec thunar

# open code editor
bindsym $mod+semicolon exec codium
bindsym $mod+Shift+semicolon exec ~/.local/share/JetBrains/Toolbox/apps/rider/bin/rider.sh

# open process manager
bindsym $mod+p exec kitty htop

# open audio control panel
bindsym $mod+a exec pavucontrol

# open web browser
bindsym $mod+b exec librewolf
bindsym $mod+Shift+b exec librewolf --private-window
bindsym $mod+n exec brave-browser
bindsym $mod+Shift+n exec brave-browser --incognito
bindsym $mod+m exec firefox-esr
bindsym $mod+Shift+m exec firefox-esr --private-window

# open app launcher
bindsym $mod+d exec "rofi -modi drun,run -show drun"

# open zoom
bindsym $mod+z exec zoom

# take screenshot
bindsym Print exec flameshot full -c
bindsym Ctrl+Print exec flameshot screen -c

# kill focused window
bindsym $mod+q kill

# change window focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move floating windows by dragging
floating_modifier $mod

# move focused windows
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle split
bindsym $mod+e layout toggle split

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# move workspaces between monitors
bindsym $mod+Ctrl+Left move workspace to output left
bindsym $mod+Ctrl+Right move workspace to output right

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# kill all applications
bindsym $mod+Shift+Ctrl+q xdotool search "" windowkill %@ --maxdepth 1

# reboot
bindsym $mod+Shift+Ctrl+r kitty sudo reboot
